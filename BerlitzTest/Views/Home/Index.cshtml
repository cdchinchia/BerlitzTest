@model IEnumerable<BerlitzTest.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Products</h1>



<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="bi bi-file-plus-fill"></i> New Product</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Product List</strong></h3>
            </div>
             <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0){
                        <table class="table table-bordered" id="tblProducts" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th> 
                                    <th>@Html.DisplayNameFor(m => m.ProductNumber)</th> 
                                    <th>@Html.DisplayNameFor(m => m.Title)</th>
                                    <th>@Html.DisplayNameFor(m => m.Price)</th>
                                    <th>@Html.DisplayNameFor(m => m.Description)</th>                                    
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.ProductNumber)</td>
                                        <td>@Html.DisplayFor(m => item.Title)</td>
                                        <td>@Html.DisplayFor(m => item.Price)</td>
                                        <td>@Html.DisplayFor(m => item.Description)</td>                                        
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i> Edit</a>                                            
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-eraser-fill"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }else{

                    }
                </div>
            </div>
        </div>
    </div>
</div>
